            <label for="fname">Mã Phòng</label>
            <input type="text" id="fname" name="MaPhong" placeholder=" Nhập mã.." required value="@Model.MaPhong" readonly>

            <label for="lname">Tên Phòng</label>
            <input type="text" id="lname" name="TenPhong" placeholder="Tên Phòng.." required value="@Model.TenPhong" readonly>
            @*<label for="lname">Tên loại phòng</label>*@
            @*@Html.DropDownList("MaLoaiPhong");*@
            @*<input type="text" id="lname" name="MaLoaiPhong" placeholder="Mã Loại Phòng.." required>*@
            @*<label for="lname">Tên Khách sạn</label>*@
            @*@Html.DropDownList("MaKhachSan");*@
            @*<input type="text" id="lname" name="MaKhachSan" placeholder="Mã Khách Sạn.." required>*@


            @*<label for="lname">Hình Ảnh</label>
                <input type="file" id="file_hinh" name="HinhChinh" onchange="loadFile(event);" placeholder=""><br>
                <label for="lname">Hình nhỏ 1</label>
                <input type="file" id="file_hinh1" name="Hinh1" placeholder=""><br>
                <label for="lname">Hình nhỏ 2</label>
                <input type="file" id="file_hinh2" name="Hinh2" placeholder="">*@

            <br>
            <label for="lname">Mô tả</label>
            <input type="text" id="lname" name="MoTa" placeholder="Mô tả về phòng.." value="@Model.MoTa" readonly>
            <label for="lname">Giá</label>
            <input type="number" id="lname" name="Gia" placeholder="" required value="@Model.Gia" readonly>
