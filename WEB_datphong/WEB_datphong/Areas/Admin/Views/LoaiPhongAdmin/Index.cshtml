@model IEnumerable<HotelConection.LOAIPHONG>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<head>
    <style>
        ih, td {
            text-align: center;
        }

        #customers {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 70%;
            margin: auto;
        }

            #customers td, #customers th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #customers tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #customers tr:hover {
                background-color: #ddd;
            }

            #customers th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #4CAF50;
                color: white;
            }
    </style>
</head>
<body>
    <h1 style="padding:20px">Quản Lí Loại Phòng</h1>
    <table id="customers">
        <tr>
            <th>Mã Loại Phòng</th>
            <th>Tên Loại Phòng</th>
            <th>Tình Trạng</th>
            <th style="text-align:center" colspan="2"><a href="@Url.Action("Create","LoaiPhongAdmin")"><i class="fas fa-plus-circle"></i></a></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaLoaiPhong</td>
                <td>@item.TenLoaiPhong</td>
                <td>@item.TinhTrang</td>
                <td><a href="@Url.Action("Edit","LoaiPhongAdmin",new { id=item.MaLoaiPhong})"><i class="fas fa-edit"></i></a></td>
                <td><a href="@Url.Action("XoaTamThoi","LoaiPhongAdmin",new { id=item.MaLoaiPhong})"><i class="fas fa-trash-alt"></i></a></td>

            </tr>
        }

    </table>

</body>

