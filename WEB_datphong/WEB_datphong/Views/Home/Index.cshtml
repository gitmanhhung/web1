@model IEnumerable<HotelConection.DANHG>
@{
    ViewBag.Title = "Home Page";
}

<div class="grid">
    <div class="body1 body2">
        @*<h1 class="body1__h1">các điểm đến phổ biến ở việt nam</h1>*@
        <h1 class="body1__h1">CÁC ĐIỂM ĐẾN Ở ĐÀ NẴNG</h1>
        <div class="img__top">
            <div class="img__1">
                <img src="https://danatravel.vn/data/news/default/bang-gia-ve-ba-na-hills-moi-nhat-nam-2019.jpg"
                     alt="" />
                <p class="img__p">BÀ NÀ HILL</p>
            </div>
            <div class="img__2">
                <img class="img__more--2-left"
                     src="https://kinhnghiemdulich.info/images/nha-trang/sailing-nha-trang.jpg"
                     alt="" />
                <p class="img__p">BIỂN MỸ KHÊ</p>
            </div>
            <div class="img__3">
                <img src="https://media.truyenhinhdulich.vn/upload/news/7_2019/hoi%20an%202_1563176621.jpg"
                     alt="" />
                <p class="img__p">ĐÈO HẢI VÂN</p>
            </div>
            <div class="img__4">
                <img src="https://dulichkhampha24.com/wp-content/uploads/2020/01/nha-tho-duc-ba-sai-gon-1.jpg"
                     alt="" />
                <p class="img__p">KHU VUI CHƠI</p>
            </div>
            <div class="img__5">
                <img src="https://img.thuthuatphanmem.vn/uploads/2018/09/26/hinh-anh-van-mieu-dep-o-ha-noi_053444423.jpg"
                     alt="" />
                <p class="img__p">...</p>
            </div>
            <div class="img__6">
                <img src="https://img.thuthuatphanmem.vn/uploads/2018/09/26/anh-dep-sa-pa-mua-lua-chin_052040971.jpg"
                     alt="" />
                <p class="img__p">...</p>
            </div>
            <div class="img__7">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRRJzKigyqFo0WbnjY30HLglH0xtzBR9Ap_bQ&usqp=CAU"
                     alt="" />
                <p class="img__p">...</p>
            </div>
            <div class="img__8">
                <img src="https://hinh365.com/wp-content/uploads/2020/03/tong-hop-1-132-hinh-anh-phong-canh-dep-nhat-ve-da-lat-ma-ban-khong-bo-lo-4.jpg"
                     alt="" />
                <p class="img__p">...</p>
            </div>
        </div>
    </div>

    <div class="body1">
        <h1 class="body1__h1">CÁC CẢNH ĐẸP Ở ĐÀ NẴNG</h1>
        <div class="body1__layout">

            <div class="body1__layout--1">
                <img src="https://statics.vntrip.vn/images/dest/bangkok-new.png"
                     alt="" />
                <p class="body1__layout--p"></p>
            </div>
            <div class="body1__layout--2">
                <img src="https://statics.vntrip.vn/images/dest/seoul-new.png"
                     alt="" />
                <p class="body1__layout--p"></p>
            </div>
            <div class="body1__layout--3">
                <img src="https://statics.vntrip.vn/images/dest/kualalumpur-new.png"
                     alt="" />
                <p class="body1__layout--p"></p>
            </div>
            <div class="body1__layout--4">
                <img src="https://statics.vntrip.vn/images/dest/singapore-new.png"
                     alt="" />
                <p class="body1__layout--p"></p>
            </div>

        </div>
    </div>
    <h1 style="padding:10px 100px"><i  class="fas fa-comments"></i> Bình luận và đánh giá của khách hàng...</h1>
    @foreach(var item in Model) {
    <div class="grid grid1">
        <div class="content">
            <ul class="content__list">
                <li class="content__list--item">

                    <div class="">
                        <p style="padding: 0px 50px;color: red;font-size: 15px">   <i class=" fas fa-users"></i> @item.HoTen</p>
                        <ul class="content__list--item-info-history">
                            <li style="padding: 0px 50px" class="content__list--item-info-subhistory">
                                <i class="far fa-clock content__list--item-info-icon"></i>
                                <p class="content__list--item-info-specifically">@item.NgayDanhGia</p>
                            </li>
                        </ul>
                        <div style="padding: 0px 40px">
                            <p class="content__list--item-info-p">
                                @item.NoiDung
                            </p>
                        </div>
                    </div>
                </li>


            </ul>
            <h3 style="padding-left:30px"><a style="text-decoration:none" href="~/DanhGia/Index">viết đánh giá...</a></h3>
        </div>
        
    </div>
    }
    <div class="grid">
        <div class="body1">
            <h1 class="body1__h1">CAM KẾT TỪ TRIP</h1>
            <div class="body1__list">
                <div class="body1__list--item">
                    <img class="body1__list--item-img" src="~/Asset/Image/ck6.svg" alt="" />
                    <p class="body1__list--item-p">
                        Cập nhật xu hướng du lịch mới nhất
                    </p>
                </div>
                <div class="body1__list--item">
                    <img class="body1__list--item-img" src="~/Asset/Image/ck3.svg" alt="" />
                    <p class="body1__list--item-p">Cơ hội du lịch 0đ</p>
                </div>
                <div class="body1__list--item">
                    <img class="body1__list--item-img" src="~/Asset/Image/ck2.svg" alt="" />
                    <p class="body1__list--item-p">
                        Giảm giá hấp dẫn cho thành viên của Trip
                    </p>
                </div>
                <div class="body1__list--item">
                    <img class="body1__list--item-img" src="~/Asset/Image/ck1.svg" alt="" />
                    <p class="body1__list--item-p">Vé máy bay rẻ nhất thị trường</p>
                </div>
                <div class="body1__list--item">
                    <img class="body1__list--item-img" src="~/Asset/Image/ck5.svg" alt="" />
                    <p class="body1__list--item-p">Combo đồng giá 1999k</p>
                </div>
                <div class="body1__list--item">
                    <img class="body1__list--item-img" src="~/Asset/Image/ck4.svg" alt="" />
                    <p class="body1__list--item-p">
                        Combo tự động, chủ động lịch trình
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<style type="text/css">
    .grid1 {
                background-color: var(--white-color);
            }

    .content {
        width: 90%;
        margin: 0 auto;
        
    }

    .content__list {
        padding-left: 0;
        list-style: none;
    }

    .content__list--item {
        display: flex;
        border: 1px solid #ccc;
        box-shadow: 0 1px 3px #ccc;
        border-radius: 2px;
        margin: 20px 0;
    }

    .content__list--item-link {
        text-decoration: none;
        color: transparent;
        width: 320px;
        height: 160px;
    }

    .content__list--item-link-img {
        height: 140px;
        width: 280px;
        object-fit: cover;
        border-radius: 2px;
        margin: 10px 20px;
    }

    .content__list--item-info {
        margin: 30px 0;
    }

    .content__list--item-info-title {
        text-decoration: none;
        color: #183a57;
        font-size: 2rem;
        font-weight: 700;
        margin: 10px 0;
    }

    .content__list--item-info-history {
        padding-left: 0;
        list-style: none;
        display: flex;
        margin: 10px 0;
    }

    .content__list--item-info-subhistory {
        display: flex;
        align-items: center;
        margin-right: 16px;
        font-size: 1.4rem;
        color: var(--text-color);
    opacity: 0.8;
    }

    .content__list--item-info-icon {
        margin-right: 4px;
    }

    .content__list--item-info-specifically {
        margin: 0;
    }

    .content__list--item-info-p {
        font-size: 1.5rem;
        color: var(--text-color);
    margin: 10px 0;
    }
</style>

